<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationTrackerApp.Pages.MainPage">

    <!-- Add the WebView to load the map and the heatmap functionality -->
    <WebView x:Name="HeatMap"
             IsVisible="False"
             VerticalOptions="FillAndExpand"
             HorizontalOptions="FillAndExpand"
             Source="https://maps.googleapis.com/maps/api/js?key=AIzaSyB--fb9T9ywahydG71P5rQr6h3Uzq4dzgkY&callback=initMap&libraries=visualization"></WebView>

    <StackLayout>
        <Label Text="Location Tracker App"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Start" />
        <Button Text="Track Location"
                Clicked="OnTrackLocationClicked" />
        <Button Text="Show Heat Map"
                Clicked="OnShowHeatMapClicked" />
    </StackLayout>
</ContentPage>
